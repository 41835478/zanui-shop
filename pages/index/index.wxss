/**index.wxss**/
page{
	background-color: #F9F9F9;
}
.tab{
	position: fixed;
	left: 0;
	top: 0;
	z-index: 1;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
::-moz-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.swiper{
	margin-top:45px;
	max-height: 200px;

}
.swiper-container{
	height:200px;
}

.slide-image{

	width: 100%;
}
.goods{
	width: 48%;
	height:250px;
	padding: 1%;
	float: left;
}
.goods image{
	width: 100%;
	height:200px;
}
.zan-c-gray-dark{
	font-size: 12px;
}
.loading{
	display: flex;
	flex-direction: column;
}

/*轮播样式*/
.swiper{
 position: relative;
}
.swiper .dots{
 position: absolute;
 left: 0;
 right: 0;
 bottom: 20rpx;
 display: flex;
 justify-content: center;
}
.swiper .dots .dot{
 margin: 0 8rpx;
 width: 14rpx;
 height: 14rpx;
 background:#fff;
 border-radius: 8rpx;
 transition: all .6s;
}
.swiper .dots .dot.active{
 width: 24rpx;
 background:#f80;
  width: 28rpx;
 height: 14rpx;
}

.zan-loadmore--nodata,
.zan-loadmore--nomore{
  border-top: 2rpx solid #d1d1d1;
  color: #999;
}

.zan-loadmore__dot {
  position: absolute;
  left: 50%;
  top: 10px;
  margin-left: -2px;
  margin-top: -2px;
  content: "";
  width: 4px;
  height: 4px;
  border-radius: 50%;
  background-color: #d1d1d1;
  display: inline-block;
  vertical-align: middle;
}