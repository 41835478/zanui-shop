/**index.wxss**/
page{
  height: 100%;
  touch-action:pan-x;
  background-color: rgba(247,7,118,0.8);
  top:0;
  left:0;
  right: 0;
  bottom: 0;
}
.container{
 height: 100%;
}
.bgimg{
  position: absolute;
  top:0;
  left: 0;
  z-index:-5;
  overflow: hidden;
}
.bgcover{
  width: 100%;
  position: absolute;
  top: 0;
  left:0;
  right: 0;
  bottom: 0;
  background: -webkit-gradient(linear,0 0,0 300,from(rgba(225,225,225,0)),to(rgba(247,7,118,1)));
  background: -moz-gradient(linear,0 0,0 300,from(rgba(225,225,225,0)),to(rgba(247,7,118,1)));
  z-index:0;
}
swiper{
  background: none;
  overflow: visible;
/*  background: gradient(linear,0 0,0 300,from(rgba(0,0,0,0)),to(rgba(247,7,118,1)));
  background: -webkit-gradient(linear,0 0,0 300,from(rgba(0,0,0,0)),to(rgba(247,7,118,1)));
  background: -moz-gradient(linear,0 0,0 300,from(rgba(0,0,0,0)),to(rgba(247,7,118,1)));*/
}
swiper-item{
  text-align: center;
  display: flex;
  display: -webkit-flex; 
  flex-direction: column-reverse;
}
.item-box{
  width: 700rpx;
  min-height: 400rpx;
  background-color: white;
  text-align: center;
  margin:0px 10px;
  margin-bottom:50rpx;
  border-radius:10px;
}

.item-box image{
  position: relative;
  top: -100rpx;
  border-radius: 2px;
  width: 300rpx;
  height:400rpx;
  z-index: 20;
}
.item-box .text-area{
  margin-bottom: 10px;
  margin-top:-45px;
}
.text-area view{
  margin:10px 0px;
  padding:0px 10px;

}