/**index.wxss**/
page{
  position: relative;
  height:100vh;
  overflow: hidden;
  background-color: rgb(105,105,105);
}
.container{
   height:100vh;
   overflow: hidden;
}
scroll-view{
height: 100vh;
}
.bgimg{
  position: absolute;
  top:0;
  left: 0;
  z-index:-5;
  overflow: hidden;
  width: 100%;
  max-height:100vh;
}
.bgcover{
  width: 100%;
  height:100vh;
  position: absolute;
  top: 0;
  left:0;
  background: -webkit-gradient(linear,0 0,0 300,from(rgba(225,225,225,0)),to(rgba(105,105,105,1)));
  background: -moz-gradient(linear,0 0,0 300,from(rgba(225,225,225,0)),to(rgba(105,105,105,1)));
  z-index:0;
}
swiper{
  width: 100%;
  height: 100vh;
  position: absolute;
  bottom: 0;
  background: none;
/*  background: gradient(linear,0 0,0 300,from(rgba(0,0,0,0)),to(rgba(247,7,118,1)));
  background: -webkit-gradient(linear,0 0,0 300,from(rgba(0,0,0,0)),to(rgba(247,7,118,1)));
  background: -moz-gradient(linear,0 0,0 300,from(rgba(0,0,0,0)),to(rgba(247,7,118,1)));*/
}
swiper-item{
  text-align: center;
  display: flex;
  display: -webkit-flex; 
  flex-direction: column-reverse;
}
.item-box{
  width: 700rpx;
  min-height: 500rpx;
  background-color: white;
  text-align: center;
  margin:0px 10px;
  margin-bottom:60rpx;
  border-radius:10px;
}

.item-box image{
  position: relative;
  top: -100rpx;
  border-radius: 5px;
  width: 300rpx;
  z-index: 20;
}
.item-box .text-area{
  margin-bottom: 10px;
  margin-top:-45px;
}
.text-area view{
  margin:10px 0px;
  padding:0px 10px;

}
.name{
  position: absolute;
  top:30rpx;
  left:50rpx;
  font-size:20px;
  color:white;
  font-family: "sans-serif";
  z-index: 50;
}
